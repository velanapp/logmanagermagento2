<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
		<tab id="velanapps_logmanagement" translate="label" sortOrder="1">
            <label>Velanapps</label>
        </tab>
        <section id="velanapps_logmanager" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Log Manager</label>
            <tab>velanapps</tab>
            <resource>Velanapps_Logmanager::logmanager</resource>
            
			<group id="system_debug_log" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Log Management</label>
                <field id="system_log" translate="label" sortOrder="10" type="select" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>System / Exception Log</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
		</section>
    </system>
</config>
