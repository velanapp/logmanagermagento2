<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    
    <head>
        <css src="Velanapps_Sn::css/smartnotifications.css"/>
		<!-- <block class="Magento\Framework\View\Element\Template" name="reference_header" template="Velanapps_Sn::reference_header.phtml" /> -->
    </head>
    
    <body>
        
        <referenceContainer name="after.body.start">
			<block class="Magento\Framework\View\Element\Template" name="reference_header" template="Velanapps_Sn::reference_header.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="informationbar_header" template="Velanapps_Sn::informationbar_header.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="smartnotifications_popup" template="Velanapps_Sn::smartnotifications_popup.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="back_to_top" template="Velanapps_Sn::back_to_top.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="hse_headerdec" template="Velanapps_Sn::header_decorative.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="side_bar" template="Velanapps_Sn::side_bar.phtml" />
        </referenceContainer>
        
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="informationbar_footer" template="Velanapps_Sn::informationbar_footer.phtml" />
        </referenceContainer>
        
    </body>
</page>